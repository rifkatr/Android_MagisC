<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:background="#64a62f">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_settings_white_24dp"/>
                <ImageView
                    android:id="@+id/musicBackground"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_sound_on"/>
                <ImageView
                    android:id="@+id/ava"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/male"
                    android:layout_gravity="right"/>
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/colorWrong"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="210dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/cara"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:text="Spielanleitung"
                    android:textColor="@color/colorWhite"
                    android:background="#2098d1"/>

                <Button
                    android:id="@+id/cara"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:text="Warum Deutsch?"
                    android:textColor="@color/colorWhite"
                    android:background="#2098d1"/>

            </LinearLayout>

        </LinearLayout>
</RelativeLayout>